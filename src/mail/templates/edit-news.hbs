{{#if detailsEdit}}
  <h1>Новость «{{detailsEdit.newNews.title}}» отредактирована</h1>
  <h3>Детализация изменений:</h3>
  <table>
    {{#if detailsEdit.detailsUpdate.title}}
      <tr style="background-color: grey;color:white;">
        <td>Прежнее название:</td>
        <td>{{detailsEdit.detailsUpdate.title.previous}}</td>
      </tr>
      <tr style="background-color:yellowgreen;color:white;">
        <td>Новое название:</td>
        <td>{{detailsEdit.detailsUpdate.title.new}}</td>
      </tr>
    {{else}}
      <tr>
        <td style="text-transform: uppercase;">Название не изменилось</td>
      </tr>
    {{/if}}

    {{#if detailsEdit.detailsUpdate.description}}
      <tr style="background-color: grey;color:white;">
        <td>Прежний текст новости:</td>
        <td>{{detailsEdit.detailsUpdate.description.previous}}</td>
      </tr>
      <tr style="background-color:yellowgreen;color:white;">
        <td>Новый текст новости:</td>
        <td>{{detailsEdit.detailsUpdate.description.new}}</td>
      </tr>
    {{else}}
      <tr>
        <td style="text-transform: uppercase;">Текст новости не изменился</td>
      </tr>
    {{/if}}

    {{#if detailsEdit.detailsUpdate.author}}
      <tr style="background-color: grey;color:white;">
        <td>Прежний автор новости:</td>
        <td>{{detailsEdit.detailsUpdate.author.previous}}</td>
      </tr>
      <tr style="background-color:yellowgreen;color:white;">
        <td>Новый автор новости:</td>
        <td>{{detailsEdit.detailsUpdate.author.new}}</td>
      </tr>
    {{else}}
      <tr>
        <td style="text-transform: uppercase;">Автор новости не изменился</td>
      </tr>
    {{/if}}

    {{#if detailsEdit.detailsUpdate.cover}}
      <tr style="background-color: grey;color:white;">
        <td>Прежнее изображение новости:</td>
        <td>
          http://localhost:3000{{detailsEdit.detailsUpdate.cover.previous}}
        </td>
      </tr>
      <tr style="background-color:yellowgreen;color:white;">
        <td>Новое изображение новости:</td>
        <td>
          http://localhost:3000{{detailsEdit.detailsUpdate.cover.new}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td style="text-transform: uppercase;">Изображение новости не изменилось</td>
      </tr>
    {{/if}}
  </table>
{{/if}}