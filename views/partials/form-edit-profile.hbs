<div class="card text-center mt-3">
  {{#if cookies}}
    <img
      style="object-fit: cover;"
      src="http://localhost:3000{{cookies.user.avatar}}"
      class="bi d-block mx-auto mb-1 mt-3 rounded-circle"
      width="150"
      height="150"
      alt="avatar"
    />
  {{else}}
    <svg
      class="bi d-block mx-auto mb-1"
      width="24"
      height="24"
      fill="currentColor"
      viewBox="0 0 16 16"
    >
      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
      <path
        fill-rule="evenodd"
        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
      /></svg>
  {{/if}}
  <div class="card-body mx-auto">
    <div class="input-group mb-2 align-items-center">
      <i class="far fa-image fa-lg me-3 fa-fw"></i>
      <input class="form-control" type="file" id="avatar" />
    </div>
    <div class="d-flex flex-row align-items-center mb-1">
      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="firstName"
          class="form-control"
          placeholder="Введите Ваше Имя"
          value={{cookies.user.firstName}}
        />
      </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="lastName"
          class="form-control"
          placeholder="Введите Вашу Фамилию"
          value={{cookies.user.lastName}}
        />
      </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input
          type="email"
          id="email"
          class="form-control"
          placeholder="Введите Ваш Email"
          value={{cookies.user.email}}
        />
      </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password"
          class="form-control"
          placeholder="Введите Ваш пароль"
        />
      </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="passwordRepeat"
          class="form-control"
          placeholder="Повторите Ваш пароль"
        />
      </div>
    </div>
    <button
      onclick="editProfile({{getValue cookies.token.access_token}})"
      id="btnEditProfile"
      class="btn btn-dark mb-3"
    >
      Сохранить
    </button>
  </div>
</div>

<script src="/js/edit-user.js" type="text/javascript"></script>